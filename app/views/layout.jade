                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href='/')
                            img(src='/images/226x50_1.png')

                    div.collapse.navbar-collapse
                        ul.nav.navbar-nav
                            li
                                a(href='/blog') Blog
                            li
                                a(href='/tag') Tag
                            li
                                a(href='/view') View
                        ul.nav.navbar-nav.navbar-right
                            li
                                a(href='/cover') Cover
                            li
                                a(href='/about') About
                            if(user)
                                li
                                    a(href='/manage') Manage

                                li
                                    a(href='/post') Post Blog
                                li
                                    a(href='/postcover') Post Cover
                                li
                                    a(href='/logout') Log out
        block content
        block footer
            div.footer


                .container-fluid
                    .container
                        .row
                            .col-md-12
                                ul.list-inline
